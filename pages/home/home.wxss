/* pages/home/home.wxss */
.page {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
}

.subscribed {
  width: 95%;
  height: 500rpx;
  box-sizing: border-box;
  box-shadow: 5rpx 5rpx 20rpx -2rpx rgb(224, 228, 228);
  border: 1rpx solid rgb(247, 248, 248);
  border-radius: 15rpx;
}

.school_container {
  width: 100%;
  height: 500rpx;
  box-sizing: border-box;
  box-shadow: 5rpx 5rpx 20rpx -2rpx rgb(224, 228, 228);
  border: 1rpx solid rgb(247, 248, 248);
  border-radius: 15rpx;
}

.school_container_item {
  width: 100%;
  height: 500rpx;
  box-sizing: border-box;
  box-shadow: 5rpx 5rpx 20rpx -2rpx rgb(224, 228, 228);
  border: 1rpx solid rgb(247, 248, 248);
  border-radius: 15rpx;
}

.subscribed_item {
  width: 100%;
  height: 500rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
}

.subscribed_item_school {
  width: 95%;
  height: 100rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
}

.department_container {
  width: 95%;
  height: 330rpx;
  margin-top: 40rpx;
  margin-bottom: 30rpx;
  box-sizing: border-box;
  border: 1rpx solid rgb(170, 245, 245);
  border-radius: 15rpx;
}

.department_container_item {
  width: 100%;
  height: 100%;
}

.subscribed_item_department {
  width: 100%;
  height: 330rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.title_container {
  width: 95%;
  height: 80rpx;
  background-color: rgb(235, 245, 244);
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}

.title_content {
  width:97.5%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  margin-left: 2.5%;
  font-size: 35rpx;
  font-weight: 100;
  color: rgb(241, 100, 119);
}

.waterfall {
  width: 95%;
  box-sizing: border-box;
  box-shadow: 5rpx 5rpx 20rpx -2rpx rgb(224, 228, 228);
  border: 1rpx solid rgb(247, 248, 248);
  border-radius: 15rpx;
  position: relative;
  margin-bottom: 12rpx;
}

.waterfall_item_title {
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 45rpx;
  font-weight: bold;
}

.goTop{
  height: 100rpx;
  width: 100rpx;
  position: fixed;
  bottom: 100rpx;
  background: rgba(36, 33, 33, 0.3);
  right: 30rpx;
  border-radius: 50%;
}

.bottom {
  width: 95%;
  height: 40rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-around;
  margin-top: 20rpx;
}

.div {
  width: 38%;
  height: 3rpx;
  background-color: cadetblue;
}

.text {
  width: 20%;
  height: 40rpx;
  color: cadetblue;
  font-size: 20rpx;
  font-weight: 100;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
}