/* pages/home/home.wxss */
.page {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
}

.waterfall {
  width: 95%;
  box-sizing: border-box;
  box-shadow: 5rpx 5rpx 20rpx -2rpx rgb(224, 228, 228);
  border: 1rpx solid rgb(247, 248, 248);
  border-radius: 15rpx;
  position: relative;
  margin-bottom: 50rpx;
}

.waterfall_item_title {
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 45rpx;
  font-weight: bold;
}

.goTop{
  height: 100rpx;
  width: 100rpx;
  position: fixed;
  bottom: 100rpx;
  background: rgba(36, 33, 33, 0.3);
  right: 30rpx;
  border-radius: 50%;
}