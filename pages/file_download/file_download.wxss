/* pages/file_download/file_download.wxss */
.page {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.progress_container {
  width: 95%;
  /* height: 150rpx; // 动态高度 */
  display: flex;
  flex-direction: column;
  align-items: center;
  border: 1rpx solid rgb(195, 223, 223);
  border-radius: 15rpx;
}

.download_title {
  width: 95%;
  /* height: 50rpx; // 自动换行 */
  display: flex;
  flex-direction: column;
  justify-content: center;
  color: rgb(18, 34, 7);
  font-size: 25rpx;
  font-weight: 200;
  word-break: break-all;
}

.exist {
  width: 95%;
  height: 30rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  align-items: center;
  font-size: 20rpx;
  font-weight: 100;
  color: rgb(121, 158, 165);
}

.progress {
  width: 95%;
  height: 60rpx;
}

.download_detail_container {
  width: 95%;
  height: 40rpx;
  display: flex;
  flex-direction: row;
}

.download_detail {
  width: 30%;
  height: 40rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  color: cadetblue;
  font-size: 25rpx;
  font-weight: 100;
}

.download_detail_nop {
  width: 50%;
  height: 40rpx;
}

.button_container {
  width: 20%;
  height: 40rpx;
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  justify-content: center;
}

.button_icon {
  width: 30rpx;
  height: 30rpx;
  background-color: brown;
  border-radius: 50%;
}