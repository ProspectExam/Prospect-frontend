/* pages/mine/mine.wxss */
.page {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.header {
  width: 100%;
  height: 300rpx;
  margin-bottom: 20rpx;
}

.login {
  height: 250rpx;
  width: 95%;
  box-sizing: border-box;
  box-shadow: 5rpx 5rpx 20rpx -2rpx rgb(224, 228, 228);
  border: 1rpx solid rgb(247, 248, 248);
  border-radius: 15rpx;
  position: relative;
  display: flex;
  margin-bottom: 50rpx;
}

.image {
  width: 25%;
  height: 75%;
  background: rgb(176, 180, 189);
  border-radius: 50%;
  margin-left: 5%;
  margin-right: 5%;
  margin-top: 31.25rpx;
}

.image_image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.text {
  width: 55%;
  height: 75%;
  margin-left: 1%;
  margin-right: 9%;
  margin-top: 31.25rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.text1 {
  font-size: 60rpx;
  margin-bottom: 5rpx;
}

.text2 {
  font-size: 30rpx;
  margin-top: 5rpx;
}

.text3 {
  font-size: 60rpx;
}

.divider {
  width: 700rpx;
  height: 3rpx;
  background: cyan;
  margin-left: 25rpx;
  margin-right: 25rpx;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
}

.describe {
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 100%;
  height: 100rpx;
}

.arrow {
  width: 20rpx; 
  height: 20rpx;
  border-top: 3rpx solid #999;
  border-right: 3rpx solid #999;
  transform: rotate(45deg);
  position: absolute;
  right: 40rpx;
}

.describe_text {
  font-size: 35rpx;
  font-weight: 500;
  position: absolute;
  left: 20rpx;
}

.logoff {
  background: rgb(181, 238, 238);
  color: crimson;
  margin-bottom: 50rpx;
}

.version {
  font-size: 25rpx;
  color: rgb(128, 139, 139);
  text-align: center;
  margin-bottom: 50rpx;
}

.box {
  width: 95%;
  height: 500rpx;
  box-sizing: border-box;
  box-shadow: 5rpx 5rpx 20rpx -2rpx rgb(224, 228, 228);
  border: 1rpx solid rgb(247, 248, 248);
  border-radius: 15rpx;
  position: relative;
  margin-bottom: 50rpx;
}