/* pages/subscribe/subscribe.wxss */
.page {
  /* 自动获取 */
  /* width; */
  /* height; */
  display: flex;
  flex-direction: column;
}

.side {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: row;
}

.tab {
  width: 30%;
  height: 98%;
  margin-left: 2%;
  border: 1rpx solid rgb(195, 223, 223);
  border-radius: 15rpx;
  background-color: rgb(247, 248, 248);
}

.tab_item {
  width: 100%;
  height: 20%;
  margin-bottom: 5rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  box-sizing: border-box;
  border: 1rpx solid rgb(195, 223, 223);
  border-radius: 15rpx;
  font-size: 25rpx;
  font-weight: 100;
}

.tab_right {
  width: 68%;
  height: 100%;
}

.toggle_container {
  width: 80rpx;
  height: 60rpx;
}

.perch {
  width: 40rpx;
  height: 25rpx;
  margin-left: 10rpx;
}

.toggle {
  width: 40rpx;
  height: 2rpx;
  margin-left: 10rpx;
  margin-bottom: 8rpx;
  background-color: rgb(50, 230, 230);
}

.wrapper {
  width: 100%;
  height: 60rpx;
}

.card-container {
  width: 90%;
  height: calc(95% - 60rpx);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
  box-sizing: border-box;
  box-shadow: 5rpx 5rpx 20rpx -2rpx rgb(224, 228, 228);
  border: 1rpx solid rgb(247, 248, 248);
  border-radius: 15rpx;
  margin-left: 5%;
  margin-top: 2.5%;
}

.card-content {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.card-content-inner {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
}

.card-content-title {
  width: 95%;
  height: 22%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
  color: black;
  font-size: 50rpx;
  font-weight: 800;
  border: 1rpx solid rgb(184, 241, 241);
  border-radius: 15rpx;
  margin-top: 2.5%;
  margin-bottom: 0.5%;
}

.card-school-detail {
  width: 95%;
  height: 72%;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
  color: red;
  font-size: 40rpx;
  font-weight: lighter;
  border: 1rpx solid rgb(184, 241, 241);
  border-radius: 15rpx;
  margin-top: 0.5%;
  margin-bottom: 2.5%;
}

.card-department-detail {
  width: 95%;
  height: 62%;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
  color: red;
  font-size: 40rpx;
  font-weight: lighter;
  border: 1rpx solid rgb(184, 241, 241);
  border-radius: 15rpx;
  margin-top: 0.5%;
  margin-bottom: 0.5%;
}

.button {
  width: 100%;
  height: 10%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
  margin-top: 0.5%;
  margin-bottom: 1.5%;
}